<!DOCTYPE html>
<html>
<head>
  <title>ProjectVer2</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <script src="https://code.jquery.com/jquery-3.1.1.min.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
  <script src="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.js"></script>

</head>

<body>
  <br>
  <hr>
  <header>


    <%  if @logged_in %>

    <div class="ui secondary pointing menu">
      <a class="item" href="/user">
        Your Account
      </a>
      <a class="item" href="/users">
        Users
      </a>
      <a class="item" href="/sections">
        Sections
      </a>
      <a class="item" href="/posts">
        Posts
      </a>
      <a class="item" href="/replies">
        Replies
      </a>
      <div class="right menu">
        <%= link_to "Logout", logout_path, method: :delete %>
      </div>
    </div>
    <div class="ui segment">
      <p></p>
    </div>

    <h3>Logged in as <%= link_to @logged_in_user.username, user_path(@logged_in_user) %></h3>
    <br>
    <% else %>
    <button class="ui button">
      <%= link_to "Sign up", new_user_path %>
    </button>
    <button class="ui button">
      <%= link_to "Log in", new_login_path %>
    </button>

    <% end %>





  </header>

  <%= yield %>
</body>
</html>
