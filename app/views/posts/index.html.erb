<h1>Posts</h1>

<div class="post">

</div>

<h3><%= link_to "New Post", new_post_path %></h3>

<% @posts.each do |post| %>




<ul>
<p>
  <b><%= link_to post.section.name, section_path(post.section) %>
  </b> Posted by <%= link_to post.user.username, user_path(post.user) %> at <%= post.created_at.strftime("%I:%M%p") %> </p>

  <%= link_to post.name, post_path(post) %> last updated at <%= post.created_at.strftime("%I:%M%p") %><br /><br /><hr>

</ul>
<% end %>
</div>
