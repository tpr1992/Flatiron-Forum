<h1>Posts</h1>

<% if @logged_in %>
<button class="ui button">
  <h3><%= link_to "New Post", new_post_path %></h3>
</button>
<% end %>

<div class="post">

</div>



<% @posts.each do |post| %>




<ul>
  <p>
    <b><%= link_to post.section.name, section_path(post.section) %>
    </b> Posted by <%= link_to post.user.username, user_path(post.user) %> at <%= post.created_at.localtime.strftime("%I:%M%p") %> </p>

    <%= link_to post.name, post_path(post) %> last updated at <%=  post.created_at.localtime.strftime("%I:%M%p") %><br /><br />

    <div class="ui label">
      <%= link_to "Replies", post_path(post) %>
      <div class="detail"><%= link_to post.replies.count, post_path(post) %>
      </div>
    </div>
    <hr>
  </ul>
  <% end %>
</div>
