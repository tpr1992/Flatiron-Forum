<h1>New Post</h1>

<% unless @post.errors.full_messages.empty? %>
<%= @post.errors.full_messages %>
<% end %>

<%= form_for @post do |f| %>
<%= f.label :name %>
<div class="ui input">
  <%= f.text_field :name %>
</div>
<%= f.label :content %>
<div class="ui input">
  <%= f.text_field :content %>
</div>

<%= f.collection_select(:user_id, User.all, :id, :username, {:selected => @logged_in_user.id}) %>
<%= f.collection_select(:section_id, Section.all, :id, :name) %>
<%= f.submit "Create Post" %>

<% end %>
